
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<form action="" method="post">
    Id:<input type="text" name="Id" value="@(Model != null ? Model.Id : "")" class="form-control" />
    @Html.ValidationMessage("Id")
    <br />

    Product Name:<input type="text" name="Name" value="@(Model != null ? Model.Name : "")" class="form-control" />
    @Html.ValidationMessage("Name")
    <br />

    Product Description:<input type="text" name="Description" value="@(Model != null ? Model.Description : "")" class="form-control" />
    @Html.ValidationMessage("Description")
    <br />
    <input type="submit" class="btn btn-success" />

</form>