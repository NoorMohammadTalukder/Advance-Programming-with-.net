
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<form action="" method="post">


    Name:<input type="text" name="Name" value="@(Model != null ? Model.Name : "")" class="form-control" />
    @Html.ValidationMessage("Name")
    <br />

    Email:<input type="text" name="Email" value="@(Model != null ? Model.Email : "")" class="form-control" />
    @Html.ValidationMessage("Email")
    <br />

    Address:<input type="text" name="Address" value="@(Model != null ? Model.Address : "")" class="form-control" />
    @Html.ValidationMessage("Address")
    <br />

    <input type="submit" class="btn btn-success" />

</form>

