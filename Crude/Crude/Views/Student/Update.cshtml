
@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>

<form action="" method="post">

    ID:<input type="text" name="Name" value="@(Model.Id)" class="form-control" disabled />
    @Html.ValidationMessage("Id")
    <br>
    Name:<input type="text" name="Name" value="@(Model.Name)" class="form-control" />
    @Html.ValidationMessage("Name")

    <br />

    Email:<input type="text" name="Email" value="@(Model.Email)" class="form-control" />
    @Html.ValidationMessage("Email")

    <br />

    Address:<input type="text" name="Address" value="@(Model.Address)" class="form-control" />
    @Html.ValidationMessage("Address")

    <br />

    <input type="submit" class="btn btn-success" />
